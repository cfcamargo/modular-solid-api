generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String    @id @default(uuid())
  name            String
  brand           String
  quantity        Int
  created_at      DateTime  @default(now())
  desactivated_at DateTime?

  @@map("products")
}

enum Role {
  ADMIN
  DEFAULT
}

model User {
  id              String    @id @default(uuid())
  name            String
  email           String    @unique()
  hashed_password String
  role            Role      @default(DEFAULT)
  created_at      DateTime  @default(now())
  desactivated_at DateTime?

  @@map("users")
}

model Address {
  id     String @id @default(uuid())
  sreet  String
  number String
}
