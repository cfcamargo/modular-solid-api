generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String    @id @default(uuid())
  name            String
  brand           String
  quantity        Int
  created_at      DateTime  @default(now())
  desactivated_at DateTime?

  @@map("products")
}

enum Role {
  ADMIN
  DEFAULT
}

model User {
  id              String    @id @default(uuid())
  name            String
  email           String    @unique()
  hashed_password String
  role            Role      @default(DEFAULT)
  created_at      DateTime  @default(now())
  desactivated_at DateTime?

  @@map("users")
}

enum ClientType {
  pf
  pj
}

model Client {
  id              String     @id @default(uuid())
  type            ClientType
  name            String
  fantasyName     String?
  document        String
  rg_ie           Int
  im              Int?
  created_at      DateTime   @default(now())
  updated_at      DateTime   @default(now())
  desactivated_at DateTime?
  address         Address?
  contacts        Contact[]

  @@map("clients")
}

model Address {
  id           String @id @default(uuid())
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  country      String
  clientId     String @unique
  Client       Client @relation(fields: [clientId], references: [id])

  @@map("address")
}

enum ContactType {
  phone
  email
}

model Contact {
  id       String      @id @default(uuid())
  type     ContactType
  contact  String
  Client   Client?     @relation(fields: [clientId], references: [id])
  clientId String?

  @@map("contacts")
}
